<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>Limbo.Umbraco.Spa</RootNamespace>
    <Version>1.0.0-alpha001</Version>
    <Company>Limbo</Company>
    <Product>Limbo.Umbraco.Spa</Product>
    <Authors>Anders Bjerner</Authors>
    <Copyright>Copyright © 2021</Copyright>
    <Description>SPA (single page application) package for Umbraco 9.</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/skybrud/Limbo.Umbraco.Spa</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup>
    <PackageTags>Skybrud, Umbraco, SPA, Headless</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/skybrud/Limbo.Umbraco.Spa</PackageProjectUrl>
    <PackageIcon>Limbo.png</PackageIcon>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Skybrud.Essentials" Version="1.1.34" />
    <PackageReference Include="Skybrud.Essentials.AspNetCore" Version="1.0.0-alpha001" />
    <PackageReference Include="Skybrud.Essentials.Umbraco" Version="1.0.0-alpha002" />
    <PackageReference Include="Umbraco.Cms.Core" Version="9.0.0" />
    <PackageReference Include="Umbraco.Cms.Web.Website" Version="9.0.0" />
    <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../build/Limbo.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <PropertyGroup>
    <DocumentationFile>bin\$(ConfigurationName)\$(TargetFramework)\Limbo.Umbraco.Spa.xml</DocumentationFile>
  </PropertyGroup>

</Project>